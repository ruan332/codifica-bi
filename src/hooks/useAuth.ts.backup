import { useState, useEffect, useCallback, useRef } from 'react';
import { AuthService } from '../services/auth';
import type { AuthUser, LoginCredentials, UseAuthReturn } from '../types';

export function useAuth(): UseAuthReturn {
  const [user, setUser] = useState<AuthUser | null>(null);
  const [loading, setLoading] = useState(true);
  const timeoutRef = useRef<NodeJS.Timeout | null>(null);
  const isInitializedRef = useRef(false);

  // Verificar usu√°rio atual ao inicializar
  useEffect(() => {
    if (isInitializedRef.current) return;
    isInitializedRef.current = true;

    console.log('[useAuth] Iniciando verifica√ß√£o de autentica√ß√£o...');

    // Timeout de seguran√ßa para evitar loop infinito
    timeoutRef.current = setTimeout(() => {
      console.warn('[useAuth] Timeout atingido - for√ßando fim do loading');
      setLoading(false);
      setUser(null);
    }, 10000); // 10 segundos de timeout

    const initializeAuth = async () => {
      let subscription: any;
      
      try {
        // Primeiro, testar conectividade
        console.log('[useAuth] Testando conectividade com Supabase...');
        const connectionTest = await AuthService.testConnection();
        
        if (!connectionTest.success) {
          console.error('[useAuth] Falha na conectividade:', connectionTest);
          // Continuar mesmo com falha de conectividade
        }
        
        console.log('[useAuth] Chamando AuthService.getCurrentUser()...');
        const currentUser = await AuthService.getCurrentUser();
        console.log('[useAuth] Resultado do getCurrentUser:', currentUser);
        setUser(currentUser);
        
        // Escutar mudan√ßas na autentica√ß√£o
        console.log('[useAuth] Configurando listener de mudan√ßas de autentica√ß√£o...');
        const authListener = await AuthService.onAuthStateChange((user) => {
          console.log('[useAuth] Mudan√ßa de estado de autentica√ß√£o:', user);
          setUser(user);
          if (timeoutRef.current) {
            clearTimeout(timeoutRef.current);
            timeoutRef.current = null;
          }
          setLoading(false);
        });
        subscription = authListener?.data?.subscription;
        
      } catch (error) {
        console.error('[useAuth] Erro ao verificar usu√°rio:', error);
        setUser(null);
      } finally {
        console.log('[useAuth] Finalizando loading...');
        if (timeoutRef.current) {
          clearTimeout(timeoutRef.current);
          timeoutRef.current = null;
        }
        setLoading(false);
      }
      
      return subscription;
    };

    let authSubscription: any;
    initializeAuth().then(sub => {
      authSubscription = sub;
    }).catch(error => {
      console.error('[useAuth] Erro na inicializa√ß√£o:', error);
      if (timeoutRef.current) {
        clearTimeout(timeoutRef.current);
        timeoutRef.current = null;
      }
      setLoading(false);
    });

    return () => {
      console.log('[useAuth] Limpando recursos...');
      if (timeoutRef.current) {
        clearTimeout(timeoutRef.current);
        timeoutRef.current = null;
      }
      if (authSubscription) {
        authSubscription.unsubscribe();
      }
    };
  }, []);

  // Fun√ß√£o de login
  const login = useCallback(async (credentials: LoginCredentials) => {
    setLoading(true);
    try {
      const user = await AuthService.login(credentials);
      setUser(user);
    } catch (error) {
      setUser(null);
      throw error;
    } finally {
      setLoading(false);
    }
  }, []);

  // Fun√ß√£o de logout
  const logout = useCallback(async () => {
    console.log('[useAuth] üö™ Iniciando logout...');
    setLoading(true);
    try {
      console.log('[useAuth] üìû Chamando AuthService.logout()...');
      await AuthService.logout();
      console.log('[useAuth] ‚úÖ AuthService.logout() conclu√≠do');
      
      // Aguardar um pouco para o listener processar o evento SIGNED_OUT
      console.log('[useAuth] ‚è≥ Aguardando listener processar SIGNED_OUT...');
      await new Promise(resolve => setTimeout(resolve, 500));
      
      // For√ßar defini√ß√£o do user como null caso o listener n√£o tenha funcionado
      console.log('[useAuth] üîÑ Definindo user como null...');
      setUser(null);
      console.log('[useAuth] ‚úÖ Logout conclu√≠do com sucesso');
    } catch (error) {
      console.error('[useAuth] ‚ùå Erro ao fazer logout:', error);
      // Mesmo com erro, limpar o usu√°rio
      setUser(null);
      throw error;
    } finally {
      console.log('[useAuth] üèÅ Finalizando loading do logout...');
      setLoading(false);
    }
  }, []);

  // Verificar se √© admin
  const isAdmin = user?.role === 'admin';

  // Verificar se √© cliente
  const isClient = user?.role === 'client';

  return {
    user,
    loading,
    login,
    logout,
    isAdmin,
    isClient,
  };
}